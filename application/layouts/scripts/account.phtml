                type: "POST",
                url:"/default/account/deleteprelisting/format/html",
                data:{id:_listingId, start:_start},
                complete:function(data) {
                             $('#loadergif').hide();
                             $(_id).empty().html(data.responseText); 
                         }
             });
        }
