        }
        function deleteListing(_id, _listingId, _start, confirm)
        {
            confirm = confirm || 'yes';
            if (confirm == 'yes') { 
                var onaccept = 'deleteListing("'+_id+'","'+_listingId+'",'+_start+',"no")';
                showDialog('Do you really want to delete this listing?', onaccept);
                return;
